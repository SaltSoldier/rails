<p id="notice"><%= notice %></p>

<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>値段</th>
      <th>メーカー</th>
      <th>作成日</th>
      <th>更新日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.maker %></td>
        <td><%= product.created_at.in_time_zone("Asia/Tokyo").strftime("%Y/%m/%d %H:%M ") %></td>
        <td><%= product.updated_at.in_time_zone("Asia/Tokyo").strftime("%Y/%m/%d %H:%M ") %></td>
        <td><%= link_to '商品詳細', product %></td>
        <td><%= link_to '商品詳細編集', edit_product_path(product) %></td>
        <td><%= link_to '削除', product, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>商品一覧(ゲームソフト)</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>値段</th>
      <th>メーカー</th>
      <th>ハード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @softs.each do |soft| %>
      <tr>
        <td><%= soft.name %></td>
        <td><%= soft.price %></td>
        <td><%= soft.maker %></td>
        <td><%= soft.hard %></td>
        <td><%= link_to 'Show', soft %></td>
        <td><%= link_to 'Edit', edit_soft_path(soft) %></td>
        <td><%= link_to 'Destroy', soft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

